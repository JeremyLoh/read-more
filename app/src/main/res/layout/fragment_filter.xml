<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/interest"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:gravity="center"
        android:text="What is your interest?"
        android:textSize="32sp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/interest"
        android:orientation="horizontal">

        <Button
            android:id="@+id/filterButtonArts"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:background="@drawable/button_arts_background"
            android:text="@string/arts"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />


        <Button
            android:id="@+id/filterButtonHistory"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/button_history_background"
            android:text="@string/history"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linearLayout1">

        <Button
            android:id="@+id/filterButtonScience"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:background="@drawable/button_science_background"
            android:text="@string/science"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />


        <Button
            android:id="@+id/filterButtonMathematics"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_mathematics_background"
            android:text="@string/mathematics"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>