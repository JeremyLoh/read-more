<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- default text color of any given view -->
        <item name="backgroundColor">@color/colorWhite</item>
        <item name="textColor">@color/primaryText</item>
        <item name="buttonColor">@color/colorAccent</item>
        <item name="surfaceBackgroundColor">@color/colorWhite</item>
        <item name="textColorHint">@color/colorLightGrey</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/colorBlack</item>
        <item name="textColor">@color/colorWhite</item>
        <item name="buttonColor">@color/colorAccent</item>
        <item name="surfaceBackgroundColor">#242424</item>
        <item name="textColorHint">@color/colorWhite</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- default text color of any given view -->

    </style>

    <!-- nav view theme-->
    <style name="NavViewHeader" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="MyToolbar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/primaryText</item>
        <!-- icon color is set by textColorSecondary -->
        <item name="android:textColorSecondary">@color/primaryText</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/henny_penny_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="popupTheme">@style/PopupMenuTheme</item>
    </style>

    <style name="PopupMenuTheme" parent="@android:style/Widget.PopupMenu">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Style Action bar -->
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColorPrimary">@android:color/holo_red_dark</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/henny_penny_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Transition for night to day/day to night theme-->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
