<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- default text color of any given view -->
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="MyToolbar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/primaryText</item>
        <!-- icon color is set by textColorSecondary -->
        <item name="android:textColorSecondary">@color/primaryText</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/henny_penny_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="popupTheme">@style/PopupMenuTheme</item>
    </style>

    <style name="PopupMenuTheme" parent="@android:style/Widget.PopupMenu">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Style Action bar -->
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColorPrimary">@android:color/holo_red_dark</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/henny_penny_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/libre_baskerville_regular</item>
        <item name="android:textAllCaps">false</item>
        <!-- gravity states the positioning of content inside view -->
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <!-- app namespace not required to be stated
        (e.g. backgroundTint instead of app:backgroundTint) -->
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>
</resources>
